#include <bits/stdc++.h> 
long getTrappedWater(long *arr, int n){
    // Write your code here.
    long prefix[n];
    long suffix[n];
    prefix[0]=arr[0];
    suffix[n-1]=arr[n-1];
    for(int i=1;i<n;i++) prefix[i]= max(arr[i],prefix[i-1]);
    for(int i=n-2;i>=0;i--) suffix[i]=max(arr[i],suffix[i+1]);
    long sum=0;
    for(int i=0;i<n;i++){
        sum+=min(prefix[i],suffix[i])-arr[i];
    }
    return sum;
    
}
