#include <bits/stdc++.h> 
int lengthOfLongestConsecutiveSequence(vector<int> &arr, int n) {
    // Write your code here.
    sort(arr.begin(),arr.end());
    int count=0,maxC=0;
    for(int i=0;i<n-1;i++){
        if(arr[i]==arr[i+1]-1){
            count++;
            maxC=max(maxC,count);
        }else if(arr[i]==arr[i+1]){
            continue;
        }else{
            count=0;
        }
        
        
    }
    return maxC+1;
}